<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".fragments.SettingFragment">

  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/id_cv1"
      android:layout_marginTop="10dp">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dp">
          <ImageView
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:id="@+id/cover_image_setting"
              android:src="@drawable/cover"
              android:scaleType="centerCrop"/>
          <de.hdodenhof.circleimageview.CircleImageView
              android:layout_width="150dp"
              android:layout_height="150dp"
              android:id="@+id/profile_img_setting"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="140dp"
              android:scaleType="centerCrop"
              android:src="@drawable/profil"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/username_setting"
              android:text="username"
              android:layout_below="@id/profile_img_setting"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="15dp"
              android:textColor="@color/darkprimaryColor"
              android:textStyle="bold"
              android:textSize="20sp"
              android:layout_marginBottom="20dp"/>
      </RelativeLayout>
  </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_cv1"
        android:gravity="center"
        android:background="@color/profileColor"
        android:orientation="horizontal"
        android:padding="6dp"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fb"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center"
            android:id="@+id/set_facebook"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/instagram"
            android:scaleType="centerCrop"
            android:layout_marginRight="35dp"
            android:layout_gravity="center"
            android:id="@+id/set_instagram"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/website"
            android:scaleType="centerCrop"
            android:layout_marginTop="3dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center"
            android:id="@+id/set_website"/>
    </LinearLayout>

</RelativeLayout>